{
  "name": "ngx-loadable-component-app",
  "version": "0.0.1-alpha.3",
  "description": "Dynamically load & code-split your Angular components.",
  "author": "Dan Harris <me@danharris.io> (https://danharris.io/)",
  "keywords": [
    "angular",
    "code split",
    "dynamic",
    "component",
    "loadable",
    "lazy",
    "code splitting",
    "lazy load"
  ],
  "homepage": "https://github.com/dan-harris/ngx-loadable-component",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:full": "npm run build:lib && ng serve",
    "build": "ng build",
    "build:full": "npm run build && npm run build:lib",
    "build:lib": "ng build --prod ngx-loadable-component && npm run build:lib:copy",
    "build:lib:copy": "cpy README.md LICENSE dist/ngx-loadable-component",
    "test": "ng test --watch=false",
    "test:lib": "ng test ngx-loadable-component --watch=false",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "stats:bundlesize": "bundlesize",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "precommit": "lint-staged",
    "prepush": "npm run e2e",
    "prepublish": "npm run e2e",
    "publish": "npm publish dist/ngx-loadable-component"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^6.0.2",
    "@angular/core": "^6.0.2",
    "@angular/compiler": "^6.0.2",
    "@angular/animations": "^6.0.2",
    "@angular/forms": "^6.0.2",
    "@angular/http": "^6.0.2",
    "@angular/platform-browser": "^6.0.2",
    "@angular/platform-browser-dynamic": "^6.0.2",
    "@angular/router": "^6.0.2",
    "core-js": "^2.5.4",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.3",
    "@angular-devkit/build-ng-packagr": "~0.6.8",
    "@angular/cli": "~6.0.3",
    "@angular/compiler-cli": "^6.0.2",
    "@angular/language-service": "^6.0.2",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "angular-tslint-rules": "^1.4.1",
    "bundlesize": "^0.17.0",
    "codelyzer": "~4.2.1",
    "commitizen": "^2.10.1",
    "cpy-cli": "^2.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~1.4.2",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-mocha-reporter": "^2.2.5",
    "lint-staged": "^7.2.0",
    "ng-packagr": "^3.0.0-rc.2",
    "prettier": "^1.13.7",
    "protractor": "~5.3.0",
    "protractor-browser-logs": "^1.0.351",
    "protractor-console-plugin": "^0.1.1",
    "puppeteer": "^0.13.0",
    "ts-node": "~5.0.1",
    "tsickle": ">=0.25.5",
    "tslib": "^1.7.1",
    "tslint": "~5.9.1",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "~2.7.2",
    "validate-commit-msg": "^2.14.0"
  },
  "lint-staged": {
    "*.{json,js}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "tslint -t codeFrame",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/ngx-loadable-component/bundles/ngx-loadable-component.umd.min.js",
      "maxSize": "1.9KB"
    }
  ]
}
